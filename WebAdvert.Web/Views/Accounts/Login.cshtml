    ViewData["Title"] = "Login Page";
}

@model WebAdvert.Web.Models.Accounts.LoginModel;

@{
}

<div class="row">
    <div class="col-md-6">
        <h5>
            <a asp_controller="Accounts" asp-action="Signup">
                If you are not a member then sign up here
            </a>
        </h5>

        <form method="post" asp-controller="Accounts" asp-action="Login">
            <h4>Login with your email and password</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger">
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <br />
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />

                <div class="checkbox">
                    <label asp-for="RememberMe"></label>
                    <input asp-for="RememberMe" />
                    
                </div>
                

            </div>

            <button type="submit" class="btn btn-dark">LogIn</button>
        </form>
    </div>


</div>