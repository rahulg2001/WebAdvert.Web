@model WebAdvert.Web.Models.Accounts.LoginWithMFAModel;

@{
}
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Accounts" asp-action="ConfirmMFA">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">

                <label asp-for="MFACode"></label>
                <input asp-for="MFACode" class="form-control" />
                <span asp-validation-for="MFACode" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-dark">Submit</button>
        </form>
    </div>
</div>


